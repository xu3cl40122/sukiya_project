html 
    font-family Microsoft JhengHei,Arial,Helvetica,sans-serif
body,html 
    height 100%//把 body,html 設置 height， 即可用 height 100% 繼承 body 的高度
* 
    box-sizing border-box
p 
    margin 0
    padding 0
// --- 共用 class ---
.button 
    display flex 
    justify-content center
    align-items center
    cursor pointer
.bgPink
    background-color #f9f0d9 
// ---- main color --- 
s_red = #d7000f
s_yellow = #FFD93E
//--- class ---
.navbar
    background s_red
    width 100%
    height 80px
    position fixed
    top 0
    left 0
    z-index 30
    display flex
    justify-content flex-end
    align-items center
    i 
        margin-right 10px
        font-size 1.5rem
    .navbar_logo
        width 68px
        height 58px
        position absolute
        top 10px
        left 75px
        background url('./pic/Logo_sukiya.jpg')
        background-size cover 
        border 2px solid white
        display inline-block
    .navlist
        display inline-flex
        list-style none
        color white
        margin-right 10%
        li 
            margin-right 25px
            align-items center
            display inline-flex
            padding 5px 0px
            position relative
            &:hover
                cursor pointer
                &:before
                    transform scale3d(1,1,1)
            
            // to hover effect
            &:before
                content ''
                position absolute
                bottom 0px
                width 100%
                height 2px
                background-color white
                transition 0.3s all ease-out
                transform scale3d(0,1,1)
            
