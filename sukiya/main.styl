// 連動 sidebar 和 product_container 
sidebar_width = 13%
.sidebar
    box-shadow 3px 3px 6px 3px rgba(0,0,0,0.2)
    width sidebar_width
    height 100vw
    background #1E222A
    padding 100px 0px
    font-size 1.3rem
    font-weight bold
    color white
    position fixed
    top 0px
    left 0px
    z-index 20
    .sidebar_line
        padding 10px 15px
        transition 0.3s background ease-out 
        &:hover
            background #3d4656
    .sidebar_line-active
        background #3d4656
        border-left 5px solid s_yellow
.product_container 
    margin-left sidebar_width
    margin-top 80px
    width -(100 - sidebar_width)
    height 100%
    position relative
    display flex
    align-items flex-start
    justify-content center
    .product_row
        width 85%
        display flex 
        justify-content space-between
        flex-wrap wrap
        
    .product_col
        width 280px
        margin-top 30px
        box-shadow  0px 1px 13px 1px rgba(0,0,0,0.1)
        border-radius 3px
        overflow hidden
        transition 0.3s all ease-out
        z-index 20
        &:hover
            cursor pointer
            box-shadow  0px 1px 13px 5px rgba(0,0,0,0.1)
            img 
                transform scale(1.1)
    .product_row_img 
        width 100%
        height 195px
        display block
        z-index -10
        position relative
        transition 0.3s all ease-out
        background-color white
    .product_col_inf 
        width 100%
        background s_yellow
        display flex
        align-items center
        padding 0px 15px
        flex-wrap wrap
        z-index 10
    .product_col_inf_name
        margin 5px 0px
        text-align center
        font-size 1.3rem
        font-weight bold
        display block
        width 100%
    .product_col_inf_price
        color s_red 
        font-size 1rem
        text-align center
        width 100%
        margin 5px 0px
